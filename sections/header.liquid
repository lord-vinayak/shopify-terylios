{% stylesheet %}
.navbar{
  background-color: #130D0C;
  max-width: 100%;
  
}
  .ul {
  list-style-type: none;
  color: #FFEFD9;
}


.navbar {
  display: flex;
  max-width: 1920px;
  min-height: 123px;
  justify-content: space-between;
  align-items: center;
}

.nav-left{
    display: flex;
    justify-content: space-between;
    gap: 60px;

}
.nav-left-left{
  margin-left: 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
}

.nav-left-left p{
  font-family: "Jost", sans-serif;
  font-weight: 400;
  font-style: normal;
  color: #FFEFD9;
  font-size: 16px;
}
.nav-left-right ul, .nav-right-left ul{
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 50px;
    color: #FFEFD9;
    font-family: "Libre Franklin", sans-serif;
    font-weight: 400;
    font-size: 16px;
}

.nav-right{
  display: flex;
  justify-content: space-between;
  gap: 60px;
}

.nav-right-right{
  margin-right: 20px;
  display: flex;
  align-items: center;
}

.socials{
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20px;
}

.logo-cont img{
  width: 60px;
  height: 60px;
}

{% endstylesheet %}

