{% stylesheet %}

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1.6fr 1fr;
  }

  .hero-descp {
    max-width: 610px;
    max-height: 100vh;
    overflow-y: auto;
    overflow-x: hidden;
    background-color: #251b1b;
    padding-left: 53px;
    padding-top: 76px;
    padding-right: 53px;
  }

  .descp {
    width: 426px;
    margin-top: 45px;
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 300;
    font-size: 16px;
    color: #ffefd9;
    line-height: 1.8;
    padding-bottom: 20px;
  }

  .hero-images {
    max-width: 1310px;
    height: 100vh;
    overflow-y: scroll;
  }

  .split-row {
    display: flex;
    height: 100vh;
  }

  .split-row img {
    width: 50%;
    height: 100%;
    object-fit: cover;
  }

  .full-row {
    height: 100vh;
  }

  .full-row img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .titles {
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin: 0;
  }

  .title-small p {
    margin: 0;
    width: 58px;
    height: 13px;
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 300;
    font-size: 14px;
    color: #ffd1afb2;
  }

  .title-big {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 504px;
    height: 50px;
  }

  .title-big p {
    width: 355px;
    font-family: "Jost"
    , sans-serif;
    font-weight: 400;
    font-size: 24px;
    color: #ffefd9;
    line-height: 1.5;
  }

  .prices {
    margin-top: 70px;
    width: 172px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .prices span {
    color: #ffefd9;
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 500;
    font-size: 18px;
  }

  .prices .old {
    color: #ffefd9;
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 200;
    font-size: 13px;
    text-decoration: line-through;
    opacity: 50%;
  }

  .size {
    margin-top: 40px;
    width: 505px;
    display: flex;
    flex-direction: column;
  }

  .size-texts {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #ffefd9;
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 400;
    font-size: 16px;
  }

  .size-guide {
    width: 95px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2px;
  }

  .size-boxes {
    width: 296px;
    display: flex;
    justify-content: space-between;
    gap: 20px;
    color: #ffefd9;
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 400;
    font-size: 16px;
  }

  .size-boxes p:hover {
    background-color: #514641;
  }

  .size-boxes p {
    border: 2px solid #ffefd980;
    padding: 16px;
  }

  .shipping-info {
    margin-top: 60px;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .shipping-info .shipping-within {
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 300;
    font-size: 14px;
    color: #ffd1afb2;
  }

  .shipping-info .shipping-info-time {
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #FFD1AF;
  }

  .buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .buttons button {
    height: 50px;
    border-radius: 0;
  }

  .buttons .add-cart {
    background-color: #FFEFD9;
    border: none;
    font-family: "Jost"
    , sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #55362F;
  }

  .buttons .add-cart:hover {
    background-color: #eed3aa;
  }

  .buttons .customise:hover {
    background-color: #FFEFD9;
    color: #251b1b;
  }

  .buttons .customise {
    background-color: #251b1b;
    border: 2px solid #FFEFD9;
    font-family: "Jost"
    , sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #FFEFD9;
  }

  .help {
    margin-top: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .help .help-left {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: "Libre Franklin"
    , sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #FFEFD9;
  }

  .help-left span {
    text-decoration: underline;
    line-height: 1.2;
  }

  .accordion {
    font-family: sans-serif;
    color: white;
    background: #251b1b;
    border-top: 1px solid #333;
    border-bottom: 1px solid #333;
  }

  .accordion input[type="radio"] {
    display: none;
  }

  .accordion-label {
    display: block;
    padding: 15px 20px;
    cursor: pointer;
    background: #251b1b;
    border-top: 1px solid #333;
    font-family: "Jost"
    , sans-serif;
    font-weight: 400;
    text-transform: uppercase;
    font-size: 16px;
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
    background: #251b1b;
    padding: 0 20px;
    border-top: 1px solid #333;
  }

  .accordion input:checked + .accordion-label + .accordion-content {
    max-height: 500px;
    padding: 20px;
  }

  .accordion-content p {
    font-family: "Libre Franklin"
    , sans-serif;
    font-size: 14px;
    line-height: 1.6;
  }

  .specs {
    margin-top: 20px;
  }

  .specs h4 {
    font-size: 12px;
    text-transform: uppercase;
    margin-bottom: 10px;
    color: #aaa;
  }

  .specs ul {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 14px;
  }

  .specs li {
    display: flex;
    justify-content: space-between;
    padding: 4px 0;
    border-bottom: 1px dotted #333;
  }
{% endstylesheet %}

