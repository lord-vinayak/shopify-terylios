{% stylesheet %}

  .products {
    max-width: 1920px;
    max-height: 1200px;
    width: 100%;
    height: 100%;
    background-color: #251b1b;
    padding: 100px 0 100px 66px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .product-headings {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px;
    margin-bottom: 10px;
  }

  .product-headings .h-small {
    font-family: "Jost"
    , sans-serif;
    font-weight: 300;
    font-size: 18px;
    color: #ffd1af;
    letter-spacing: 1.2px;
  }

  .product-headings .h-large {
    text-transform: uppercase;
    font-family: "Times New Roman"
    , Times
    , serif;
    font-weight: 400;
    font-size: 28px;
    color: #ffe6c0;
    letter-spacing: 8px;
  }

  .carousel-container {
    width: 100%;
    max-width: 100%;
    overflow-x: auto;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .carousel {
    display: flex;
    gap: 20px;
    scroll-snap-type: x mandatory;
    margin-left: auto;
  }

  .carousel-container::-webkit-scrollbar {
    display: none;
  }

  .product-card {
    flex: 0 0 auto;
    width: 280px;
    scroll-snap-align: start;

    overflow: hidden;
  }

  .product-img-container {
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
  }

  .product-img {
    display: block;
    width: 100%;
    transition: opacity 0.3s ease-in-out;
  }

  .hover-img {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .product-img-container:hover .hover-img {
    opacity: 1;
  }

  .product-img-container:hover .main-img {
    opacity: 0;
  }

  .product-details {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .product-name {
    max-width: 362px;
    width: 100%;
    font-family: "Jost"
    , sans-serif;
    font-weight: 400;
    font-size: 12px;
    color: #ffefd9;
    letter-spacing: 1.2px;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0 !important;
  }

  .product-price {
    margin: 0 !important;
    font-family: "Jost"
    , sans-serif;
    font-weight: 300;
    font-size: 12px;
    color: #ffe6c0;
    letter-spacing: 1.2px;
  }

  .view-button button {
    height: 50px;
    border-radius: 0;
    margin-top: 60px;
    background-color: #251b1b;
    border: 2px solid #ffe6c066;
    font-family: "Jost"
    , sans-serif;
    font-weight: 400;
    font-size: 13px;
    color: #ffefd9;
    padding: 12px 40px;
  }

  .view-button button:hover {
    background-color: #ffefd9;
    color: #a99283;
    transition: background-color 0.3s ease
    , color 0.3s ease;
  }


{% endstylesheet %}